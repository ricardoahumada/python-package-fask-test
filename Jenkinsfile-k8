pipeline {
    agent any
    
    
    stages {
        stage('Checkout') {
            steps {
                git branch: 'kubernetes',url: 'https://github.com/ricardoahumada/python-package-flask-test'
            }
        }        
        stage('Requirements') {
            steps {
                echo 'Installing dependencies...'
                sh 'pip3 install -r requirements.txt'
            }
        }
        stage('Unit/Integration tests') {
            steps {
                echo 'Unit/Integration...'
                sh 'python3 -m unittest discover -s tests/unit -v'
            }
        }        
        stage('Acceptance tests') {
            steps {
                echo 'Acceptance...'
                sh 'python3 -m unittest discover -s tests/acceptance -v'
            }
        }     
        stage('Create image') {
            steps {
                echo 'creating image...'
                /** Docker hub case **/
                sh 'docker build -t ricardoahumdada/python-package-flask-test -f Dockerfile .'
                
                /** ACR case **/
                // sh 'docker build -t ricardobootcampregistry.azurecr.io/python-package-flask-test:v1 -f Dockerfile .'
            }
        } 
        stage('Publish image') {
            steps {
                echo 'pushing image...'
                
                /** Docker hub case **/
                withDockerRegistry([ credentialsId: "docker-hub-credentials", url: "" ]) {
                    sh 'docker push ricardoahumada/python-package-flask-test:latest'
                }

                /** ACR case **/
                // To get acr url use: az acr list -o table
                // For using this image with kubernetes remember to create secret: "kubectl create secret generic acr-secret --from-file=.dockerconfigjson=$HOME/.docker/config.json --type=kubernetes.io/dockerconfigjson" and add to yamls using "imagePullSecrets" property
                /*withDockerRegistry([ credentialsId: "acr-credentials", url: "https://ricardobootcampregistry.azurecr.io" ]) {
                    sh 'docker push ricardobootcampregistry.azurecr.io/python-package-flask-test:v1'
                }*/
            }
        }
        stage('Apply Kubernetes ') {
            steps {
                /**
                    Need to create credentials named "k8-credentials"  uploading minikube config file.
                    Use: "scp ubuntu@[IP]:.kube/config k8-config" to download config file with name k8-config
                **/
                
                /** Minikube case **/
                withKubeConfig([credentialsId: 'k8-credentials']) {
                    sh 'kubectl apply -f k8-app-deploy/1-python-package-flask-test_deployment.yaml'
                    sh 'kubectl apply -f k8-app-deploy/2-python-package-flask-test_service.yaml'
                    sh 'kubectl port-forward service/python-package-flask-test-service 5000:5000 &'
                }

                /** AKS case **/
                // For getting the server url use: "aks-cluster$ az aks list -o table" and use "Fqdn" value
                /*withKubeConfig([credentialsId: 'k8-credentials',serverUrl:'https://saving-kitten-k8s-5846b313.hcp.eastasia.azmk8s.io']) {
                    sh 'kubectl apply -f k8-app-deploy/1-python-package-flask-test_deployment.yaml'
                    sh 'kubectl apply -f k8-app-deploy/2-python-package-flask-test_service.yaml'
                    sh 'kubectl port-forward service/python-package-flask-test-service 5000:5000 &'
                    sleep 5 // give 5 secs to stablish the port forward
                }*/
            }
        }
        stage('External acceptance tests') {
            steps{
                echo 'External acceptance tests...'
                sh 'python3 -m unittest discover -s tests/acceptance-ext -v'
            }
        }
    }
    post {
        always {
            echo 'post do this always...'
        }
        success{
            echo 'post do this when success...'
        }
        failure {
            echo 'post do this when failure...'
        }
        cleanup{
            echo 'post do this when cleanup...'
            sh 'pkill -f "port-forward"'
            deleteDir()
        }
    }
}